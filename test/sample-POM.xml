<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>da101730</groupId>
	<artifactId>ops-tools</artifactId>
	<version>1.0.20-RC.1</version>
	<packaging>mule-application</packaging>

	<name>ops-tools</name>

	<description>Mule DevOps Tools</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<app.runtime>4.4.0</app.runtime>
		<mule.maven.plugin.version>3.8.2</mule.maven.plugin.version>
		<!-- Change this if needed -->
		<version.major>v1</version.major>
		<!-- CloudHub Parameters -->
		<credentials.mode>client_credentials</credentials.mode>
		<apply.runtimePatch>false</apply.runtimePatch>
		<!-- SKip the verification if the deployment is successful -->
		<deployment.verification.skip>false</deployment.verification.skip>
		<!-- Anypoint Visualizer properties -->
		<visualizer.layer>Experience</visualizer.layer>
		<!--Change to: Experience, Process or System -->
		<visualizer.project>toBeChanged</visualizer.project>
		<!-- The name of project using this API -->
		<visualizer.functionalflow>toBeChanged</visualizer.functionalflow>
		<!-- The functional flows this belongs to -->
		<!-- If multiple projects or functionalflows: use comma separated values -->
		<!-- <visualizer.project>project1, project2, ...</visualizer.project> -->
		<tags>template,cloudhub</tags>
		<categories>[]</categories>
		<fields>[]</fields>
		<munit.version>2.3.11</munit.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<version>3.0.0</version>
			</plugin>
			<plugin>
				<groupId>org.mule.tools.maven</groupId>
				<artifactId>mule-maven-plugin</artifactId>
				<version>${mule.maven.plugin.version}</version>
				<extensions>true</extensions>
				<configuration>
					<sharedLibraries>
						<sharedLibrary>
							<groupId>org.springframework</groupId>
							<artifactId>spring-context</artifactId>
						</sharedLibrary>
						<sharedLibrary>
							<groupId>org.springframework.security</groupId>
							<artifactId>spring-security-config</artifactId>
						</sharedLibrary>
						<sharedLibrary>
							<groupId>org.springframework</groupId>
							<artifactId>spring-beans</artifactId>
						</sharedLibrary>
						<sharedLibrary>
							<groupId>org.springframework.security</groupId>
							<artifactId>spring-security-crypto</artifactId>
						</sharedLibrary>
						<sharedLibrary>
							<groupId>org.springframework.security</groupId>
							<artifactId>spring-security-core</artifactId>
						</sharedLibrary>
						<sharedLibrary>
							<groupId>org.springframework</groupId>
							<artifactId>spring-core</artifactId>
						</sharedLibrary>
					</sharedLibraries>

					<!-- Configuration for CloudHub Deployment All variables for deployment 
						are defined on DevOps pipeline -->

					<cloudHubDeployment>

						<uri>${anypoint.platform.uri}</uri>
						<muleVersion>${app.runtime}</muleVersion>
						<connectedAppClientId>${anypoint.deploy.app.client.id}</connectedAppClientId>
						<connectedAppClientSecret>${anypoint.deploy.app.client.secret}</connectedAppClientSecret>
						<connectedAppGrantType>${credentials.mode}</connectedAppGrantType>
						<applicationName>${project.artifactId}-${version.major}${mule.nameSuffix}</applicationName>
						<region>${aws.region}</region>
						<workers>${workers.number}</workers>
						<workerType>${worker.size}</workerType>
						<environment>${anypoint.environment}</environment>
						<objectStoreV2>${objectStoreV2}</objectStoreV2>
						<!-- Necessity to enable objectStoreV2 for the application, To put 
							in parameter -->
						<persistentQueues>${persistentQueues}</persistentQueues>
						<!-- Necessity to enable persistency queue for the application, To 
							put in parameter -->
						<skipDeploymentVerification>${deployment.verification.skip}</skipDeploymentVerification>
						<!-- Parameter to skip the validation of deployment -->
						<applyLatestRuntimePatch>${apply.runtimePatch}</applyLatestRuntimePatch>
						<!-- Automatically apply the latest runtime patches -->

						<!-- Definition of properties to be defined at Runtime level Properties -->
						<properties>
							<mule.env>${env}</mule.env>
							<mule.encryptionKey>${mule.key}</mule.encryptionKey>
							<anypoint.platform.client_id>${anypoint.platform.client_id}</anypoint.platform.client_id>
							<anypoint.platform.client_secret>${anypoint.platform.client_secret}</anypoint.platform.client_secret>
							<anypoint.platform.analytics_base_uri>${anypoint.platform.analytics}</anypoint.platform.analytics_base_uri>
							<anypoint.platform.config.analytics.agent.enabled>${anypoint.platform.config.analytics.agent.enabled}</anypoint.platform.config.analytics.agent.enabled>

							<splunk.url>${splunk.url}</splunk.url>
							<splunk.token>${splunk.token}</splunk.token>
							<splunk.index>${splunk.index}</splunk.index>
							<splunk.sourcetype>${splunk.sourcetype}</splunk.sourcetype>
							<application.name>${project.artifactId}</application.name>
							<autodiscovery.id>${autodiscovery.id}</autodiscovery.id>
							<!-- Anypoint Visualizer properties -->
							<anypoint.platform.visualizer.layer>
								${visualizer.layer}
							</anypoint.platform.visualizer.layer>
							<anypoint.platform.visualizer.tags>
								${visualizer.project}, ${visualizer.functionalflow}
							</anypoint.platform.visualizer.tags>
						</properties>
					</cloudHubDeployment>
					<classifier>mule-application</classifier>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.10.1</version>
				<configuration>
					<compilerArgs>
						<args>-parameters</args>
					</compilerArgs>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.mulesoft.munit.tools</groupId>
				<artifactId>munit-maven-plugin</artifactId>
				<version>${munit.version}</version>
				<executions>
					<execution>
						<id>test</id>
						<phase>test</phase>
						<goals>
							<goal>test</goal>
							<goal>coverage-report</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<coverage>
						<runCoverage>true</runCoverage>
						<formats>
							<format>html</format>
						</formats>
					</coverage>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.owasp</groupId>
				<artifactId>dependency-check-maven</artifactId>
				<version>8.2.1</version>
				<executions>
					<execution>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

